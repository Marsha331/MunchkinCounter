<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.swallowsnest.munchkincounter.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:text="Reset"
        android:onClick="resetScore"
        android:layout_margin="32dp">
    </Button>
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:context="net.swallowsnest.munchkincounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player A"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:textColor="#616161"
                android:fontFamily="cursive"
                android:padding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:id="@+id/player_a_actual_score"
                android:textSize="60sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Munchkin Level"
                android:gravity="center_horizontal"
                android:fontFamily="cursive"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gain a level"
                android:textAllCaps="true"
                android:onClick="gainLevelForPlayerA"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lose a level"
                android:textAllCaps="true"
                android:onClick="loseLevelForPlayerA"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:id="@+id/player_a_effective_score"
                android:textSize="30sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Combat Strength"
                android:layout_marginLeft="22dp"
                android:gravity="center_horizontal"
                android:fontFamily="cursive"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add 1"
                android:textAllCaps="true"
                android:onClick="addExtraForPlayerA"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subtract 1"
                android:textAllCaps="true"
                android:onClick="subtractExtraForPlayerA"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                />


        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="16dp"
            ></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            tools:context="net.swallowsnest.munchkincounter.MainActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player B"
                android:gravity="center_horizontal"
                android:textSize="22sp"
                android:textColor="#616161"
                android:fontFamily="cursive"
                android:padding="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:id="@+id/player_b_actual_score"
                android:textSize="60sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Munchkin Level"
                android:gravity="center_horizontal"
                android:fontFamily="cursive"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="gain a level"
                android:textAllCaps="true"
                android:onClick="gainLevelForPlayerB"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="24dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lose a level"
                android:textAllCaps="true"
                android:onClick="loseLevelForPlayerB"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="0"
                android:id="@+id/player_b_effective_score"
                android:textSize="30sp"
                android:textColor="#000000"
                android:fontFamily="sans-serif-light"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Combat Strength"
                android:layout_marginLeft="22dp"
                android:gravity="center_horizontal"
                android:fontFamily="cursive"
                android:textSize="20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="add 1"
                android:textAllCaps="true"
                android:onClick="addExtraForPlayerB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="subtract 1"
                android:textAllCaps="true"
                android:onClick="subtractExtraForPlayerB"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
               />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
